<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">

        <TextView
            android:id="@+id/reviewTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:padding="@dimen/dp2"
            android:text="Reviews"
            android:textColor="@color/black"
            android:textSize="@dimen/heading_text_size" />

        <TextView
            android:id="@+id/ratingcountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reviewTV"
            android:padding="@dimen/dp2"
            android:text="3.0"
            android:textSize="@dimen/dp30" />


        <RatingBar
            android:id="@+id/ratingRB"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reviewTV"
            android:layout_toRightOf="@+id/ratingcountTV"
            android:padding="@dimen/dp2"
            android:rating="3" />

        <TextView
            android:id="@+id/ratingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingRB"
            android:layout_toRightOf="@+id/ratingcountTV"
            android:padding="@dimen/dp2"
            android:text="1435 Ratings"
            android:textSize="@dimen/extrasmall_text_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingTV"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_signup_btn"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:text="@string/read_more"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

