<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bannerimageIV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:scaleType="centerCrop"
            android:src="@mipmap/helpbanner" />

        <TextView
            android:id="@+id/bannernameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp30"
            android:text="Course Name"
            android:textColor="@color/black"
            android:textSize="@dimen/heading_text_size" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp7">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10">

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:padding="@dimen/dp2"
                android:text="Course Name"
                android:textColor="@color/black"
                android:textSize="@dimen/heading_text_size" />

            <TextView
                android:id="@+id/learnerTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTV"
                android:padding="@dimen/dp2"
                android:text="1234 learners"
                android:textSize="@dimen/extrasmall_text_size" />


            <RatingBar
                android:id="@+id/ratingRB"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/learnerTV"
                android:padding="@dimen/dp2"
                android:rating="3" />

            <TextView
                android:id="@+id/ratingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/learnerTV"
                android:layout_toRightOf="@+id/ratingRB"
                android:padding="@dimen/dp2"
                android:text="1435 Ratings"
                android:textSize="@dimen/extrasmall_text_size" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp12"
        android:text="Course Description"
        android:textColor="@color/black"
        android:textSize="@dimen/heading_text_size" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp7">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp150"
            android:padding="@dimen/dp10">

            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:padding="@dimen/dp2"
                android:text="Course Name zldkjvnzlksjn zlsdkjvnslkdn alskdvnasldkn lksnalk lsdkvnzslkdn lkjvnzlsdkn lksndlaskn "
                android:textColor="@color/black"
                android:textSize="@dimen/post_text_size" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_signup_btn"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:text="@string/read_more"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp12"
        android:text="Curriculum"
        android:textColor="@color/black"
        android:textSize="@dimen/heading_text_size" />

</LinearLayout>