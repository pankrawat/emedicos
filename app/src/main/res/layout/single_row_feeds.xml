<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feeds_single_row_CV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp3"
    android:layout_marginTop="@dimen/dp3"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp2"
    android:paddingTop="@dimen/dp2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <RelativeLayout
                android:id="@+id/imageRL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.emedicoz.app.views.CircleImageView
                    android:id="@+id/profilepicIV"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:src="@mipmap/default_pic" />

                <ImageView
                    android:id="@+id/profilepicIVText"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:src="@mipmap/default_pic" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/optionTV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:alpha="0.8"
                android:src="@mipmap/option" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_toLeftOf="@+id/optionTV"
                android:layout_toRightOf="@+id/imageRL">

                <RelativeLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/timeTV"
                        android:padding="2dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/timeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@mipmap/clock"
                        android:drawablePadding="@dimen/dp4"
                        android:gravity="center"
                        android:maxWidth="@dimen/dp120"
                        android:padding="@dimen/dp2"
                        android:text="24 minutes ago"
                        android:textSize="@dimen/extrasmall_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll1">

                    <TextView
                        android:id="@+id/categoryTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/tagTV"
                        android:gravity="left"
                        android:padding="2dp"
                        android:textSize="@dimen/extrasmall_text_size" />

                    <TextView
                        android:id="@+id/tagTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/tag"
                        android:gravity="right"
                        android:maxWidth="@dimen/dp120"
                        android:padding="@dimen/dp2"
                        android:textSize="@dimen/extrasmall_text_size"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/greayrefcode_dark" />
    </LinearLayout>

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_button_padding_left_right"
        android:paddingBottom="@dimen/dp2"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp5"
        android:paddingTop="@dimen/dp2"
        android:scrollIndicators="right|end"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/post_text_size" />

    <LinearLayout
        android:id="@+id/mcqoptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp5"></LinearLayout>

    <!--this is for documents-->
    <RelativeLayout
        android:id="@+id/docRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/doc_imageIV"
                    android:layout_width="@dimen/large_image_size"
                    android:layout_height="@dimen/large_image_size" />

                <TextView
                    android:id="@+id/doc_nameTV"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_toRightOf="@id/imageIV"
                    android:alpha="0.8"
                    android:maxHeight="90dp"
                    android:padding="@dimen/dp5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_heading_text_size" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <!--this is for viewing the images-->
    <RelativeLayout
        android:id="@+id/view_pagerRL"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
        <!--
                    <ImageView
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:src="@mipmap/helpbanner" />-->

        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:minHeight="30dp"
            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>

    <!--this is for video playing-->
    <RelativeLayout
        android:id="@+id/mn_videoplayer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#363636"
        android:visibility="gone">

        <ImageView
            android:id="@+id/video_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/splashbg" />

        <ImageView
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_centerInParent="true"
            android:src="@mipmap/play" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/likeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            android:textSize="@dimen/extrasmall_text_size" />

        <TextView
            android:id="@+id/commentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="2dp"
            android:textSize="@dimen/extrasmall_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/likeClickRL"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/dp5"
                android:text="@string/like"
                android:textColor="@color/black"
                android:textSize="@dimen/extrasmall_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commentClickRL"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/message" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/dp5"
                android:text="@string/comment"
                android:textColor="@color/black"
                android:textSize="@dimen/extrasmall_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shareClickRL"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/dp5"
                android:text="@string/share"
                android:textColor="@color/black"
                android:textSize="@dimen/extrasmall_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bookmarkClickRL"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ribbon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/dp5"
                android:text="Save"
                android:textColor="@color/black"
                android:textSize="@dimen/extrasmall_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
