<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/emailTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/email"
                android:drawablePadding="17dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingTop="2dp"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/til1">

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/lock"
                android:drawablePadding="17dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingTop="2dp"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/forgetpasswordTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/til2"
            android:padding="5dp"
            android:text="Forgot your login details?"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/normal_button_height"
            android:layout_below="@id/forgetpasswordTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_signup_btn"
            android:elevation="4dp"
            android:paddingLeft="@dimen/normal_button_padding_left_right"
            android:paddingRight="@dimen/normal_button_padding_left_right"
            android:text="@string/login"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="Login With Social Media"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/addimageLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/fbIV"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:src="@mipmap/facebook" />

            <ImageView
                android:id="@+id/gpIV"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:src="@mipmap/gplus" />

            <ImageView
                android:id="@+id/inIV"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:src="@mipmap/in" />

            <ImageView
                android:id="@+id/damsIV"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:src="@drawable/dams" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>