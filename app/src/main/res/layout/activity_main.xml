<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/feeds_app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/nav_headerLL"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/blue"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="@dimen/dp10"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <FrameLayout
                    android:id="@+id/imageFL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <com.emedicoz.app.views.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="@dimen/large_image_size"
                        android:layout_height="@dimen/large_image_size"
                        android:src="@mipmap/default_pic" />

                    <ImageView
                        android:id="@+id/profileImageText"
                        android:layout_width="@dimen/large_image_size"
                        android:layout_height="@dimen/large_image_size"
                        android:src="@mipmap/default_pic"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sub_heading_text_size" />

                <TextView
                    android:id="@+id/specialityTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/extrasmall_text_size" />

                <TextView
                    android:id="@+id/damsidTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/extrasmall_text_size" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/nav_headerLL">

                <ListView
                    android:id="@+id/navLV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/vNameTV"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.3dp"></ListView>

                <TextView
                    android:id="@+id/vNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="@dimen/dp3"
                    android:textSize="@dimen/extrasmall_text_size" />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

